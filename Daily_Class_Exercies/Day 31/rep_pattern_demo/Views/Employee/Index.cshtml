@model IEnumerable<rep_pattern_demo.Models.Employee>

<h2>Employees</h2>
<p><a asp-action="AddEmployee" class="btn btn-primary">Add Employee</a></p>

@if (Model != null && Model.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Employee ID</th>
                <th>Name</th>
                <th>Address</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var emp in Model)
            {
                <tr>
                    <td>@emp.EmployeeId</td>
                    <td>@emp.EmployeeName</td>
                    <td>@emp.Address</td>
                    <td>@emp.EmailId</td>
                    <td>
                        <a asp-action="EditEmployee" asp-route-id="@emp.EmployeeId" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="DeleteEmployee" asp-route-id="@emp.EmployeeId" 
                           class="btn btn-danger btn-sm"
                           onclick="return confirm('Are you sure you want to delete this employee?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        <p>No employees found. <a asp-action="AddEmployee">Add the first employee</a></p>
    </div>
}