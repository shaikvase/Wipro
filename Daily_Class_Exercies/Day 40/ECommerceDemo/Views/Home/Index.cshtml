@model IEnumerable<ECommerceDemo.Models.Product>
@{
    Layout = "_Layout";
}
<h2 class="mb-4">Featured Products</h2>

<div class="row g-4">
@foreach (var p in Model)
{
    <div class="col-12 col-sm-6 col-lg-4">
        <div class="card h-100 shadow-sm product-card">
            <img src="@p.ImageUrl" class="card-img-top" alt="@p.Name" />
            <div class="card-body d-flex flex-column">
                <h5 class="card-title">@p.Name</h5>
                <p class="text-muted small mb-2">@p.Category</p>
                <p class="card-text flex-grow-1">@p.Description</p>
                <div class="d-flex justify-content-between align-items-center">
                    <span class="h6 mb-0">₹ @p.Price</span>
                    <form asp-controller="Cart" asp-action="Add" asp-route-id="@p.Id" method="post">
                        <button type="submit" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-cart-plus"></i> Add to Cart
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}
</div>
